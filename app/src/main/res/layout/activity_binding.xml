<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/all_uiversal_bg"
    tools:context="com.xunce.electrombile.activity.BindingActivity">


    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_did"
        android:text="设备码:"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_did"
        android:layout_toRightOf="@+id/tv_did"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/tv_did"/>

