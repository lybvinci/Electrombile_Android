<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#ff1d252c">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#bfbfbf"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="安全宝"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>

    <!--<LinearLayout-->
        <!--android:id="@+id/layout_phone_number"-->
        <!--android:layout_below="@+id/title"-->
        <!--android:layout_marginTop="60dp"-->
        <!--android:orientation="horizontal"-->
        <!--style="@style/clickableLayout">-->
        <!--<ImageView-->
            <!--style="@style/settings_fragment_iv"-->
            <!--android:src="@drawable/setting_tel"/>-->
        <!--<TextView-->
            <!--style="@style/clickableLayoutTextview"-->
            <!--android:text="设备手机号"/>-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:id="@+id/layout_bind"
        android:layout_below="@+id/title"
        android:layout_marginTop="0dp"
        style="@style/clickableLayout">
        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_bangdingshebei"/>
        <TextView
            style="@style/clickableLayoutTextview"
            android:text="绑定设备"
            android:textColor="@color/black"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_help"
        android:layout_below="@+id/layout_bind"
        android:layout_marginTop="1dp"
        style="@style/clickableLayout">
        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_help"/>
        <TextView
            style="@style/clickableLayoutTextview"
            android:text="使用帮助"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_about"
        android:layout_below="@+id/layout_help"
        android:layout_marginTop="1dp"
        style="@style/clickableLayout">
        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/setting_tel"/>
        <TextView
            style="@style/clickableLayoutTextview"
            android:textColor="@color/black"
            android:text="关于与反馈"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_release_bind"
        android:layout_below="@+id/layout_about"
        android:layout_marginTop="1dp"
        style="@style/clickableLayout">
        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/sf_unbind_iv"/>
        <TextView
            style="@style/clickableLayoutTextview"
            android:textColor="@color/black"
            android:text="解除绑定"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_addSOS"
        android:layout_below="@+id/layout_release_bind"
        android:layout_marginTop="1dp"
        style="@style/clickableLayout">
        <ImageView
            style="@style/settings_fragment_iv"
            android:src="@drawable/sf_add_sos"/>
        <TextView
            style="@style/clickableLayoutTextview"
            android:textColor="@color/black"
            android:text="添加管理员"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        android:text="退出登录"
        android:background="@drawable/special_btn"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>