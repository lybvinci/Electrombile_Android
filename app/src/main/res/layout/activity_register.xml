<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="注册新账号"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/base_color_text_black"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:textColorHint="@color/base_color_text_gray"
        android:hint="@string/register_phone_num" />

    <LinearLayout
        android:id="@+id/llInputPsw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >
        <EditText
            android:layout_height="40dp"
            android:layout_width="60dp"
            android:id="@+id/etInputPsw"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textColor="@color/base_color_text_black"
            android:background="@color/white"
            android:textColorHint="@color/base_color_text_gray"
            android:hint="@string/password" />

        <ToggleButton
            android:id="@+id/tbPswFlag"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    <Button
        android:id="@+id/btnGetCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:textSize="23sp"
        android:padding="5dp"
        android:background="@drawable/common_btn"
        android:text="获取验证码"/>

    <LinearLayout
        android:id="@+id/llInputCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etInputCode"
            android:layout_height="40dp"
            android:layout_width="60dp"
            android:textColor="@color/base_color_text_black"
            android:background="@drawable/register_input_identifying"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColorHint="@color/base_color_text_gray"
            android:hint="@string/forget_password_verifycode" />

        <Button
            android:id="@+id/btnReGetCode"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/register_button_regetcode"
            android:text="@string/forget_password_get_verifycode_again"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSure"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_button_makesure" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="60dp"
    android:textSize="20sp"
    android:text="@string/company_name"/>

</LinearLayout>